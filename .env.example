# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-key-here-change-this-in-production

# Redis Configuration (for rate limiting)
REDIS_HOST=localhost
REDIS_PORT=6379

