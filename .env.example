PORT=5000

# Security Configuration
WTF_CSRF_TIME_LIMIT=3600
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True

# Application Limits
MAX_CONTENT_LENGTH=1048576  # 1MB in bytes